// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  role      String?
  provider  String?
  createdAt DateTime @default(now())
}

model Shipment {
  id                String             @id @default(cuid())
  code              String             @unique
  customerName      String
  customerEmail     String
  origin            String
  destination       String
  serviceType       String
  status            String
  paymentStatus     String
  price             Float
  weight            Float
  packageType       String
  containerContents String
  bookingDate       DateTime
  estimatedDelivery DateTime?
  documents         ShipmentDocument[]
  createdAt         DateTime           @default(now())
  updatedAt         DateTime           @updatedAt
}

model ShipmentDocument {
  id         String   @id @default(cuid())
  shipmentId String
  shipment   Shipment @relation(fields: [shipmentId], references: [id], onDelete: Cascade)
  name       String
  url        String?
  createdAt  DateTime @default(now())
}

model Inquiry {
  id         String   @id @default(cuid())
  name       String
  email      String
  phone      String?
  company    String?
  service    String?
  productType String?
  weight     Float?
  weightUnit String?
  message    String
  status     String   @default("new")
  createdAt  DateTime @default(now())
}

model EmailMessage {
  id         String   @id @default(cuid())
  direction  String   @default("outgoing") // outgoing | incoming (future)
  from       String
  to         String
  subject    String
  text       String?
  html       String?
  status     String   @default("queued") // queued | sent | failed
  error      String?
  createdAt  DateTime @default(now())
  sentAt     DateTime?
}
