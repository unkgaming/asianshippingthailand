// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  role      String?
  provider  String?
  image     String?
  emailVerified DateTime?
  verificationToken String?
  password  String?
  createdAt DateTime @default(now())

  // Relations
  accounts  Account[]
  sessions  Session[]
  config    UserConfig?
}

model Shipment {
  id                String             @id @default(cuid())
  code              String             @unique
  customerName      String
  customerEmail     String
  origin            String
  destination       String
  serviceType       String
  status            String
  paymentStatus     String
  price             Float
  weight            Float
  packageType       String
  containerContents String
  bookingDate       DateTime
  estimatedDelivery DateTime?
  documents         ShipmentDocument[]
  version           Int                @default(0)
  createdAt         DateTime           @default(now())
  updatedAt         DateTime           @updatedAt

  @@index([customerEmail])
  @@index([status])
  @@index([createdAt])
}

model ShipmentDocument {
  id         String   @id @default(cuid())
  shipmentId String
  shipment   Shipment @relation(fields: [shipmentId], references: [id], onDelete: Cascade)
  name       String
  url        String?
  createdAt  DateTime @default(now())
}

model TrackingUpdate {
  id          String   @id @default(cuid())
  shipmentId  String
  status      String   // e.g., "Package Picked Up", "In Transit to Port", "Customs Clearance", etc.
  location    String?
  description String?
  isActive    Boolean  @default(true) // true = green/current, false = red/completed
  createdAt   DateTime @default(now())
  createdBy   String?  // Staff email who created the update

  @@index([shipmentId])
  @@index([createdAt])
}

model Inquiry {
  id         String   @id @default(cuid())
  name       String
  email      String
  phone      String?
  company    String?
  service    String?
  productType String?
  weight     Float?
  weightUnit String?
  message    String
  status     String   @default("new")
  hidden     Boolean  @default(false)
  version    Int      @default(0)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @default(now()) @updatedAt

  @@index([email])
  @@index([status])
  @@index([createdAt])
  @@index([hidden])
}

model EmailMessage {
  id         String   @id @default(cuid())
  direction  String   @default("outgoing") // outgoing | incoming (future)
  from       String
  to         String
  subject    String
  text       String?
  html       String?
  status     String   @default("queued") // queued | sent | failed
  error      String?
  hidden     Boolean  @default(false)
  createdAt  DateTime @default(now())
  sentAt     DateTime?

  @@index([to])
  @@index([status])
  @@index([createdAt])
  @@index([hidden])
}

// Directory of email accounts (staff or customer contacts)
model EmailAccount {
  id          String   @id @default(cuid())
  address     String   @unique
  username    String
  password    String
  accountType String   @default("customer") // customer | staff
  active      Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([address])
  @@index([accountType])
  @@index([active])
}

// NextAuth.js (Auth.js) models
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?  @db.Text
  access_token      String?  @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?  @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String @unique
  expires    DateTime

  @@unique([identifier, token])
}

// Application-specific user configuration
model UserConfig {
  id        String   @id @default(cuid())
  userId    String   @unique
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  phone     String?
  company   String?
  preferences Json?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// Audit trail for all important actions
model AuditLog {
  id          String   @id @default(cuid())
  userId      String?
  userEmail   String?
  action      String   // CREATE, UPDATE, DELETE, LOGIN, PAYMENT, etc.
  entityType  String   // Shipment, Inquiry, User, etc.
  entityId    String?
  details     Json?    // Stores changes, metadata
  ipAddress   String?
  userAgent   String?
  createdAt   DateTime @default(now())

  @@index([userId])
  @@index([entityType, entityId])
  @@index([createdAt])
  @@index([action])
}

// Notification preferences and history
model Notification {
  id        String   @id @default(cuid())
  userId    String
  type      String   // shipment_update, payment_received, quote_response
  title     String
  message   String
  read      Boolean  @default(false)
  data      Json?    // Additional data like shipmentId, etc.
  createdAt DateTime @default(now())

  @@index([userId, read])
  @@index([createdAt])
}

// Company news and announcements
model News {
  id          String   @id @default(cuid())
  slug        String   @unique
  title       String
  excerpt     String?  // Short preview text
  content     String   @db.Text // Full article content
  imageUrl    String?  // Featured image
  author      String   // Staff email who created it
  published   Boolean  @default(false)
  publishedAt DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([published, publishedAt])
  @@index([slug])
  @@index([createdAt])
}
